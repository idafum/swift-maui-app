<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LotSizeCalculator.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:LotSizeCalculator.ShellAppFiles.Pages"
    xmlns:views="clr-namespace:LotSizeCalculator.Views"
    xmlns:local="clr-namespace:LotSizeCalculator"
    FlyoutWidth="200"
    FlyoutBackgroundColor="white">

    <Shell.ItemTemplate>
        <DataTemplate x:DataType="FlyoutItem">
            <VerticalStackLayout>
                <Border StrokeShape="RoundRectangle 10,10,10,10"
                        StrokeThickness="1.5"
                        HeightRequest="40"
                        Margin="8">
                    <Border.Stroke>
                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Color="Black"
                                          Offset="0.1"/>
                            <GradientStop Color="Red"
                                          Offset="1.0"/>
                        </LinearGradientBrush>
                    </Border.Stroke>
                    <Grid ColumnSpacing="8"
                          BackgroundColor="white">


                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="{Binding FlyoutIcon}"
                               Margin="12,0,12,0"
                               HeightRequest="60"
                               WidthRequest="60"/>

                        <Label Grid.Column="1"
                               Text="{Binding Title}"
                               FontFamily="Medium"
                               FontSize="15"
                               VerticalTextAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Separator Line -->
                <BoxView HeightRequest="1"
                         Color="#E0E0E0"
                         HorizontalOptions="Fill"
                         Margin="20,0"/>

            </VerticalStackLayout>

        </DataTemplate>
    </Shell.ItemTemplate>

    <Shell.FlyoutHeaderTemplate>
        <DataTemplate>
            <Grid BackgroundColor="White"
                  HeightRequest="200"
                  Padding="3">


                <Image Source="risk_icon_name.png"
                       HeightRequest="50"
                       Opacity="0.7"/>


            </Grid>
        </DataTemplate>
    </Shell.FlyoutHeaderTemplate>

    <FlyoutItem Title="Lot Size"
                Icon="risk_calculator.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate pages:CalculatorPage}"/>
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Risk Management"
                Icon="risk_calculator.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:CalculatorView}"/>
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="About"
                Icon="risk_info.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate pages:InfoPage}"/>
        </Tab>
    </FlyoutItem>

    <Shell.FlyoutFooterTemplate>
        <DataTemplate>
            <Border Margin="30"
                    StrokeShape="RoundRectangle 20,20,20,20"
                    Stroke="Transparent">
                <Label Text="App by Swift"
                       TextColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       FontFamily="Regular"/>
            </Border>
        </DataTemplate>
    </Shell.FlyoutFooterTemplate>

</Shell>
