<?xml version="1.0" encoding="utf-8" ?>

<!-- The Calculator View shows a Renders a Content Page. -->

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="LotSizeCalculator.Views.CalculatorView"
             xmlns:model="clr-namespace:LotSizeCalculator.Models"
             xmlns:viewmodel="clr-namespace:LotSizeCalculator.ViewModels"
             x:DataType="viewmodel:CalculatorViewModel"
             Title="Risk2"
             HideSoftInputOnTapped="True"
             x:Name="Page">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0"
                             EndPoint="0,1">
            <GradientStop Color="#B0B0B0"
                          Offset="0.0"/>
            <!-- Light Grey at the Top -->
            <GradientStop Color="#B0B0B0"
                          Offset="0.25"/>
            <!-- Maintain Grey Until 25% -->
            <GradientStop Color="#404040"
                          Offset="0.50"/>
            <!-- Transition to Dark Grey -->
            <GradientStop Color="#000000"
                          Offset="1.0"/>
            <!-- Black at the Bottom -->
        </LinearGradientBrush>
    </ContentPage.Background>

    <Border Margin="10"
            Stroke="Transparent"
            StrokeShape="RoundRectangle 10,10,10,10">
        <Grid RowDefinitions="0.05*,0.5*"
              Padding="5">
            <Label Grid.Row="0"
                   Text="Lot Size Calculator"
                   Padding="5"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontFamily="Bold"
                   FontSize="25"/>
            <Grid Grid.Row="1"
                  RowDefinitions="*,Auto,0.5*,0.5*"
                  RowSpacing="10"
                  Padding="5">

                <!--Risk Management-->
                <Border Grid.Row="0"
                        Style="{StaticResource SectionBorder}">
                    <Border.Shadow>
                        <Shadow Brush="Black"
                                Opacity="0.3"/>
                    </Border.Shadow>

                    <Grid RowDefinitions="*,*,*"
                          ColumnDefinitions="*,*"
                          Padding="10"
                          RowSpacing="15"
                          ColumnSpacing="15">

                        <!-- Currency Entry -->
                        <VerticalStackLayout Grid.Row="0"
                                             Grid.Column="0">
                            <Label Style="{StaticResource SubHeadline}"
                                   Text="Currency"/>

                            <HorizontalStackLayout Spacing="20">
                                <!--Currency Picker-->
                                <Border Style="{StaticResource SectionBorder}"
                                        StrokeThickness="1">
                                    <Picker x:Name="currencyPicker"
                                            Title="select currency"
                                            ItemsSource="{Binding Currencies}"
                                            ItemDisplayBinding="{Binding Code}"
                                            SelectedItem="{Binding SelectedCurrency}"
                                            FontFamily="Medium"/>
                                </Border>

                                <!--Flag-->
                                <Image Source="{Binding SelectedCurrency.Flag}"
                                       HeightRequest="30"
                                       WidthRequest="30"/>

                            </HorizontalStackLayout>
                        </VerticalStackLayout>


                        <!-- Account Balance Entry -->
                        <VerticalStackLayout Grid.Row="1"
                                             Grid.Column="0">
                            <Label Style="{StaticResource SubHeadline}"
                                   Text="Account Balance"/>
                            <Border Style="{StaticResource SectionBorder}">
                                <Entry x:Name="AccountBalanceEntry"
                                       Placeholder="Enter amount"
                                       Text="{Binding FormattedBalance}"
                                       Style="{StaticResource EntryField}">
                                    <Entry.Behaviors>
                                        <toolkit:EventToCommandBehavior
                                            EventName="Unfocused"
                                            BindingContext="{Binding Path=BindingContext, Source={x:Reference AccountBalanceEntry}, x:DataType=Entry}"
                                            Command="{Binding FormatBalanceCommand}"/>
                                    </Entry.Behaviors>
                                </Entry>
                            </Border>
                        </VerticalStackLayout>


                        <!-- Risk Entry -->
                        <VerticalStackLayout Grid.Row="2"
                                             Grid.Column="0">
                            <Label Style="{StaticResource SubHeadline}"
                                   Text="Risk %"/>
                            <Border Style="{StaticResource SectionBorder}">
                                <Entry Style="{StaticResource EntryField}"
                                       Placeholder="Enter risk"
                                       Text="{Binding Risk}"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Stop Loss -->
                        <VerticalStackLayout Grid.Row="2"
                                             Grid.Column="1">
                            <Label Style="{StaticResource SubHeadline}"
                                   Text="Stop Loss (Pips)"/>
                            <Border Style="{StaticResource SectionBorder}">
                                <Entry Style="{StaticResource EntryField}"
                                       Placeholder="Stop"
                                       Text="{Binding StopLossInPips}"/>
                            </Border>

                        </VerticalStackLayout>
                    </Grid>

                </Border>

                <!--Trade Details-->
                <Border Grid.Row="1"
                        Style="{StaticResource SectionBorder}"
                        BackgroundColor="{StaticResource D2}">

                    <Border.Shadow>
                        <Shadow Brush="Black"
                                Opacity="0.05"/>
                    </Border.Shadow>

                    <Grid ColumnDefinitions="*,*"
                          Padding="10"
                          RowSpacing="15"
                          ColumnSpacing="15">

                        <!-- Pair -->
                        <VerticalStackLayout Grid.Column="0">
                            <Label Style="{StaticResource SubHeadline}"
                                   Text="Pair"/>

                            <Border Style="{StaticResource SectionBorder}"
                                    BackgroundColor="{StaticResource D1}">
                                <Picker x:Name="PairPicker"
                                        Title="select pair"
                                        ItemsSource="{Binding Pairs}"
                                        SelectedItem="{Binding SelectedPair}"
                                        FontFamily="Medium"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Action -->
                        <VerticalStackLayout Grid.Column="1">
                            <Label Style="{StaticResource SubHeadline}"
                                   Text="Action"/>
                            <HorizontalStackLayout>
                                <RadioButton Content="Buy"/>
                                <RadioButton Content="Sell"/>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>

                    </Grid>

                </Border>

                <!-- Calculate Button-->
                <Border Grid.Row="2"
                        Style="{StaticResource SectionBorder}"
                        BackgroundColor="Transparent"
                        Stroke="Transparent">
                    <Button Text="Calculate"
                            HeightRequest="44"
                            WidthRequest="150"
                            Command="{Binding CalculateLotSizeCommand}"
                            VerticalOptions="Center"
                            HorizontalOptions="Center"
                            BackgroundColor="{StaticResource D0}"
                            FontFamily="Bold"/>
                </Border>

                <Border Grid.Row="3"
                        Stroke="Transparent">
                    <Label Text="Produced by Swift"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           TextColor="{StaticResource D3}"
                           FontFamily="Light"/>
                </Border>
            </Grid>
        </Grid>

    </Border>

</ContentPage>