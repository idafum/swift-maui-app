<?xml version="1.0" encoding="utf-8" ?>

<!-- The Calculator View shows a Renders a Content Page. -->

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LotSizeCalculator.Views.CalculatorView"
             xmlns:viewmodel="clr-namespace:LotSizeCalculator.ViewModels"
             x:DataType="viewmodel:CalculatorViewModel"
             Title="Lot Size Calcuator">

    <Border Margin="30"
            Stroke="Transparent"
            StrokeShape="RoundRectangle 10,10,10,10">

        <Grid RowDefinitions="*,*,*"
              RowSpacing="10">

            <!--Trade Details-->
            <Border Grid.Row="0"
                    Stroke="Transparent">
                <Grid RowDefinitions="0.2*,*">
                    <Label Text="Trade Details"
                           Grid.Row="0"/>

                    <Border Grid.Row="1"
                            StrokeShape="RoundRectangle 10">

                        <Grid RowDefinitions="*,*,*"
                              ColumnDefinitions="*,*"
                              Margin="15">

                            <Label Grid.Row="0"
                                   Grid.Column="0"
                                   Text="Pair"
                                   VerticalOptions="Center"/>
                            <Border Grid.Row="0"
                                    Grid.Column="1">
                                <Picker Title="Select a Pair">
                                    <Picker.ItemsSource>
                                        <x:Array Type="{x:Type x:String}">
                                            <x:String>EURUSD</x:String>
                                            <x:String>GBPUSD</x:String>
                                        </x:Array>
                                    </Picker.ItemsSource>
                                </Picker>
                            </Border>

                            <Label Grid.Row="1"
                                   Grid.Column="0"
                                   Text="Type"
                                   VerticalOptions="Center"/>

                            <Border Grid.Row="1"
                                    Grid.Column="1">
                                <Entry/>
                            </Border>

                            <Label Grid.Row="2"
                                   Grid.Column="0"
                                   Text="Market Price"
                                   VerticalOptions="Center"/>
                            <Border Grid.Row="2"
                                    Grid.Column="1">
                                <Entry/>
                            </Border>

                        </Grid>
                        <!--Fields-->
                    </Border>
                </Grid>
            </Border>

            <!--Risk Management-->
            <Border Grid.Row="1"
                    Stroke="Transparent">
                <Grid RowDefinitions="0.2*,*">
                    <Label Grid.Row="0"
                           Text="Risk Management"/>

                    <Border Grid.Row="1"
                            StrokeShape="RoundRectangle 10">
                        <Grid RowDefinitions="*,*,*"
                              ColumnDefinitions="*,*"
                              Margin="15">

                            <Label Grid.Row="0"
                                   Grid.Column="0"
                                   Text="Account Balance"
                                   VerticalOptions="Center"/>
                            <Border Grid.Row="0"
                                    Grid.Column="1">
                                <Grid ColumnDefinitions="0.5*,0.5*"
                                      ColumnSpacing="5">

                                    <!-- Picker for Trading Currency -->
                                    <Picker Title="Choose Currency"
                                            Grid.Column="0"
                                            ItemsSource="{Binding Currencies}"
                                            ItemDisplayBinding="{Binding Code}"/>

                                    <!-- Balance -->
                                    <HorizontalStackLayout Grid.Column="1">
                                        <Label Text="$"
                                               VerticalOptions="Center"/>
                                        <Entry Text="1000"
                                               VerticalOptions="Center"/>
                                    </HorizontalStackLayout>


                                </Grid>

                            </Border>

                            <Label Grid.Row="1"
                                   Grid.Column="0"
                                   Text="Risk %"
                                   VerticalOptions="Center"/>

                            <Border Grid.Row="1"
                                    Grid.Column="1">
                                <Entry/>
                            </Border>

                            <Label Grid.Row="2"
                                   Grid.Column="0"
                                   Text="StopLoss (Pips)"
                                   VerticalOptions="Center"/>
                            <Border Grid.Row="2"
                                    Grid.Column="1">
                                <Entry/>
                            </Border>

                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!--Calculate-->
            <Border Grid.Row="2">
                <Button Text="Calculate"
                        HeightRequest="40"
                        WidthRequest="100"/>
            </Border>

        </Grid>
    </Border>


</ContentPage>